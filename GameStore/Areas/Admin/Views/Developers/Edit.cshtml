@model Developers
<div class="container">
     <h1>Добавить нового разработчика(измениеть информацию о разработчике)</h1>      
         <form asp-controller="Developers" asp-action="Edit" method="post">
           <div class="form-group">
                <label asp-for="nameDeveloper" class="control-label">Наименование</label>
                <input asp-for="nameDeveloper" class="form-control" />
                <span asp-validation-for="nameDeveloper" class="text-danger"></span>
           </div>
           
          
            <div class="form-group">
                <input type="submit" value="Принять" class="btn btn-primary" />
            </div>
        </form>  
 </div>
