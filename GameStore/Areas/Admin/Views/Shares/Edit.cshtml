@model Shares

<div class="container">
     <h1>Добавить скидку(измениеть информацию о скидке)</h1>      
         <form asp-controller="Shares" asp-action="Edit" method="post">
           <div class="form-group">
                <label asp-for="AllGames.nameGame" class="control-label">Название игры</label>
                 <select asp-for="AllGames.nameGame" class="form-control">
                    @foreach (SelectListItem option in ViewBag.AllGamesDropList)
                      {
                        <option value="@option.Value">@option.Text</option>
                      }
            </select>
           </div>
              <div class="form-group">
                <label class="control-label">Скидочная цена</label>
                <input asp-for="discountPrice" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Принять" class="btn btn-primary" />
            </div>
        </form>  
 </div>
