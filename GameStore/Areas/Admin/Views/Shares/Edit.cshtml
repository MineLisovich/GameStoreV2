@model Shares

<div class="container">
     <h1>Добавить скидку(измениеть информацию о скидке)</h1>      
         <form asp-controller="Shares" asp-action="Edit" method="post" enctype="multipart/form-data">
           <div class="form-group">
                <label asp-for="AllGames.nameGame" class="control-label">Название игры</label>
                 <select asp-for="AllGames.nameGame" class="form-control" id ="nameGame">
                    @foreach (SelectListItem option in ViewBag.AllGamesDropList)
                      {
                        <option value="@option.Value">@option.Value, Цена: @option.Text BYN</option>
                      }
            </select>
           </div>
              <div class="form-group">
                <label class="control-label">Скидочная цена</label>
                <input asp-for="discountPrice" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Выберите файл картинки</label>
                <input name="sliderImage" id="sliderImage" type="file" class="form-control" accept=".png" />
            </div>

            <div class="form-group">
                <label asp-for="nameImageSlider" class="control-label">Имя картинки</label>
                <input asp-for="nameImageSlider" class="form-control" />
                <span asp-validation-for="nameImageSlider" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Принять" class="btn btn-primary" />
            </div>
        </form>  
 </div>
