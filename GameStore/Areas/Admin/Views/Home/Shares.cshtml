@model GameStore.Models.SharesViewModel
<div class="container">
  
           
           
         
         <div class = "single-shop-product">
             <a class="add_to_cart_button"asp-area="Admin" asp-controller="Shares" asp-action="Edit" >Добавить новую скидку на игру</a>
         </div>
            <form method="get">
            <div class="form-group">
                <input name="name" class="form-control" placeholder="Введите наименование игры"/>
            </div>
        </form>
            <table class="tableBasket">
               <thead>
                 <tr>
                    <td><b>ID:</b></td>
                    <td><b>ID игры:</b></td>
                    <td><b>Наименование игры:</b></td>
                    <td><b>Цена без скидки:</b></td>
                    <td><b>Цена со скидкой:</b></td>
                    <td><b>Имя картинки для слайдера:</b></td>
                    <td><b>Картинка:</b></td>
                    <td><b>Управление</b></td>
                 </tr>
             </thead>
             <tbody> 
             @if (Model.shares.Count() > 0)
             {
                 @foreach (var obj in Model.shares)
                 {
                     <tr>
                         <td>@obj.id</td>
                         <td>@obj.AllGamesid</td>
                         <td>@obj.AllGames.nameGame</td>
                         <td>@obj.AllGames.price</td>
                         <td>@obj.discountPrice</td>
                         <td>@obj.nameImageSlider</td>
                         <td><img src="~/images/slider/@obj.nameImageSlider"  alt="" /></td>
                         <td>
                             <a class="control_buttons"asp-area="Admin" asp-controller="Shares" asp-action="Edit" asp-route-id=@obj.id >Изменить</a>
                             <a class="control_buttons"asp-area="Admin" asp-controller="Shares" asp-action="Delete" asp-route-id=@obj.id >Удалить</a>
                         </td>
                     </tr>
                 }
             }          
            </tbody>
            </table>
 </div>
 
