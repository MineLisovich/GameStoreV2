@model GameStore.Models.SharesViewModel
<div class="container">
  
           
           
         
         <div class = "single-shop-product">
             <a class="add_to_cart_button"asp-area="Admin" asp-controller="Shares" asp-action="Edit" >Добавить новую скидку на игру</a>
         </div>
            <form method="get">
            <div class="form-group">
                <input name="name" class="form-control" placeholder="Введите наименование игры"/>
            </div>
        </form>
            <table>
               <thead>
                 <tr class = "tableDev">
                    <td class = "tableDev"><b>ID:</b></td>
                    <td class = "tableDev"><b>ID игры:</b></td>
                    <td class = "tableDev"><b>Наименование игры:</b></td>
                    <td class = "tableDev"><b>Цена без скидки:</b></td>
                     <td class = "tableDev"><b>Цена со скидкой:</b></td>
                    <td class = "tableDev"><b>Управление</b></td>
                 </tr>
             </thead>
             <tbody> 
             @if (Model.shares.Count() > 0)
             {
                 @foreach (var obj in Model.shares)
                 {
                     <tr class = "tableDev">
                         <td class = "tableDev">@obj.id</td>
                         <td class = "tableDev">@obj.AllGamesid</td>
                         <td class = "tableDev">@obj.AllGames.nameGame</td>
                         <td class = "tableDev">@obj.AllGames.price</td>
                         <td class = "tableDev">@obj.discountPrice</td>
                         <td class = "tableDev">
                             <a class="add_to_cart_button"asp-area="Admin" asp-controller="Shares" asp-action="Edit" asp-route-id=@obj.id >Изменить</a>
                             <a class="add_to_cart_button"asp-area="Admin" asp-controller="Shares" asp-action="Delete" asp-route-id=@obj.id >Удалить</a>
                         </td>
                     </tr>
                 }
             }          
            </tbody>
            </table>
 </div>
 
