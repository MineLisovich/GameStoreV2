@model GameStore.Models.EditUserViewModel
<div class="container">
    <h1>Редактировать пользователя</h1>
    <form asp-controller="Users" asp-action="Edit" method="post">
        <div class="form-group">
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="Name" class="control-label">Логин</label>
            <input asp-for="Name" class="form-control" />

            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email" class="control-label">Почта</label>
            <input asp-for="Email" class="form-control" />


        </div>


        <div class="form-group">
            <input type="submit" value="Принять" class="btn btn-primary" />
        </div>
    </form>
</div>
