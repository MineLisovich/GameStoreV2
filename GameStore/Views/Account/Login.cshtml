
@model LoginViewModel

    <!-- Login Section Begin -->
    <section class="login spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Вход</h3>
                        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
                           
                            <div class="input__item">
                             <input asp-for="UserName" placeholder="Введите логин"/><span class="icon_mail"><i class="fa fa-user"></i></span>
                            
                            </div>
                          
                            <div class="input__item"> 
                               <input asp-for="Password" placeholder="Введите пароль"/><span class="icon_lock"><i class="fa fa-key"></i></span>
                            </div>
                            <span asp-validation-for="UserName" class = "spanErr"></span><br>
                            <span asp-validation-for="Password" class = "spanErr"></span>
                            <button type="submit" class="site-btn">ВХОД</button>   
                        </form>
                    <div class="login_social">
                        <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-google"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-vk"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-yahoo"></i></a>
                    </div>
                    </div>
               

                </div>
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Нет учетной записи? <a asp-controller="Account" asp-action="Registration">Создай её!</a></h3>
                        <h3><a asp-controller="Account" asp-action="ForgotPassword">Забыли Ваш пароль?</a></h3>
                    </div>
                    
                </div>
            </div>
        
        </div>
    </section>